<h1>Maestros</h1>

<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
  <tr>
	<th style="text-align:center;">Nomina</th>
    <th style="text-align:center;">Nombre</th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
	<td style="text-align:center;"><%= link_to teacher.user.username, teacher %></td>
    <td style="text-align:center;"><%= teacher.nombre + " " + teacher.appat + " " + teacher.apmat %></td>
    <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_teacher_path(teacher), :class => 'btn btn-info' %></td>
    <td width="87"><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, teacher, method: :delete, :class => 'btn btn-danger' , data: { confirm: '¿Está seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil icon-white"></i> Agregar Maestro'.html_safe, new_teacher_path, :class => 'btn btn-info' %>
