<p id="notice"><%= notice %></p>

<p>
  <b>Clave:</b>
  <%= @minor.clave %>
</p>

<p>
  <b>Descripcion:</b>
  <%= @minor.descripcion %>
</p>
<br />


<table>
<thead>
  <tr>
	<th style="text-align:center">Materia</th>
    <th style="text-align:center">Materia Menor</th>
  </tr>
</thead>
<tbody>
	<% @examples.each do |example| %>
	  <tr>
	    <td><%= Subject.find(example.subject_id).descripcion %></td>
	    <td><%= example.descripcion  %></td>
	  </tr>
	<% end %>
</tbody>
</table>


<%= form_tag('/es/minors/addminor') do -%>
<div class="field">
    <%= label_tag :materia %><br />
	<%= select("subject", "id", @subjects.collect {|p| [ p.clave+ " " +p.descripcion, p.id ] } )%>
</div>
<%= hidden_field_tag 'minor_id', @minor.id %>
<div class="field">
    <%= label_tag :descripcion %><br />
	<%= text_field_tag :descripcion, params[:descripcion] %>
</div>
<div class="field">
	<%= submit_tag "Guardar"%>
</div>
<% end -%>
<br />

<%= link_to 'Edit', edit_minor_path(@minor) %> |
<%= link_to 'Back', minors_path %>
