<%= form_for(@subject) do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
      <% @subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :clave %><br />
    <%= f.text_field :clave %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :matreq %><br />
    <%= select("subject", "matreq", Subject.all.collect {|p| [ p.clave+ " " +p.descripcion, p.id ] } , { :include_blank => true })%>
  </div>
 <div class="field">
    <%= f.label :estatus %><br />
    <%= f.check_box :estatus, {}, 1, 0 %> Bloqueado
  </div>
 <div class="field">
    <%= f.label :taller %><br />
    <%= f.check_box :taller, {}, 1, 0 %> Bloqueado
  </div>
  <div class="actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
  </div>
<% end %>
