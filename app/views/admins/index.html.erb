<h1>Empleados</h1>

<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
  <tr>
	<th style="text-align:center;">Nomina</th>
    <th style="text-align:center;">Nombre</th>
    <th></th>
    <th></th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
	<td style="text-align:center;"><%= link_to admin.user.username, admin %></td>
	<td style="text-align:center;"><%= admin.nombre + " " + admin.appat + " " + admin.apmat %></td>
    
   <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_admin_path(admin), :class => 'btn btn-info' %></td>
    <td width="87"><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, admin, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<i class="icon-pencil icon-white"></i> Agregar Empleado'.html_safe, new_admin_path, :class => 'btn btn-info' %>
