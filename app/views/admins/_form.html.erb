<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>

<%= f.fields_for :user do |ef| %>
<div class="control-group">
    <%= ef.label :username, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :username %>
  </div>
<div class="control-group">
    <%= ef.label :password, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :password %>
</div>
<div class="control-group">
    <%= ef.label :password_confirmation, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :password_confirmation %>
</div>
<div class="control-group">
    <%= ef.label :email, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :email %>
</div>
<%= ef.hidden_field :rol , :value =>"Admin"  %>
</div>
<%- end %>

  <div class="field">
    <%= f.label :fecha_nac %><br />
    <%= f.date_select :fecha_nac, :start_year => 1950 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
