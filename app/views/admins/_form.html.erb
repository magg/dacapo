<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="control-group">
    <%= f.label :nombre %><br />
   <div class="controls">
    <%= f.text_field :nombre %>
  </div>
</div>

<%= f.fields_for :user do |ef| %>
<div class="control-group">
    <%= ef.label :username, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :username %>
  </div>
</div>

<div class="control-group">
    <%= ef.label :password, :class=>"control-label" %>
   <div class="controls">
    <%= ef.password_field :password %>
</div>
</div>

<div class="control-group">
    <%= ef.label :password_confirmation, :class=>"control-label" %>
   <div class="controls">
    <%= ef.password_field :password_confirmation %>
</div>
</div>

<div class="control-group">
    <%= ef.label :email, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :email %>
</div>
</div>
<%= ef.hidden_field :rol , :value =>"Admin"  %>
<%- end %>

<div class="control-group">
    <%= f.label :fecha_nac %><br />
   <div class="controls">

    <%= f.date_select :fecha_nac, :start_year => 1950 %>
  </div>
</div>

<div class="control-group">
    <%= f.label :fec_in %><br />
   <div class="controls">

    <%= f.date_select :fec_in, :start_year => 1950 %>
  </div>
</div>

<div class="control-group">
    <%= f.label :telefono1 %><br />
   <div class="controls">

    <%= f.text_field :telefono1 %>
  </div>
</div>

<div class="control-group">
    <%= f.label :telefono2 %><br />
   <div class="controls">

    <%= f.text_field :telefono2 %>
  </div>
</div>

<div class="control-group">
    <%= f.label :telefono3 %><br />
   <div class="controls">

    <%= f.text_field :telefono3 %>
  </div>
</div>

<div class="control-group">
    <%= f.label :estatus %><br />
   <div class="controls">

	<select id="estatus" name="estatus">
	  <option value="1">ACTIVO</option>
	  <option value="0">BAJA</option>
	  <option value="0">BLOQUEADO</option>
	</select>
  </div>
</div>

  <div class="actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
  </div>
<% end %>
